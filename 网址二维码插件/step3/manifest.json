{
  "manifest_version": 3,
  "name": "Edge QR Code Generator",
  "description": "Generate QR code for the current tab's URL",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate QR Code",
	"default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  }
}
